<section class="seciton">
  <div class="container">
  <div class="text-center">
  <h2><%= @user.name %></h2>
  <p class="text-muted">Join on <%= @user.created_at.strftime("%B %Y") %></p>
  </div>

  <div class="col">
    <h3 class="text-muted">Created <%= pluralize(@user.events.count, 'event') %></h3>
    <div class="list-group">
      <% @user.events.each do |event| %>
      <div class="list-group-item">
        <div class="d-flex w-150 justify-content-between">
          <h4 class="mb-1"><%= link_to event.title, event_path(event) %></h4>
          <small><%= event.starts_at %></small>
        </div>
        <p class="mb-1"><%= event.detail %></p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md md-4">
    <h3 class="text-muted">Attended <%= pluralize(@user.attended_events.count, 'event')%></h3>
    <div class="list-group">
      <% @user.attended_events.each do |event| %>
        <div class="list-group-item">
          <div class="d-fliex w-150 justify-content-between">
            <h4 class="mb-1"><%= link_to event.title, event_path(event) %></h4>
            <small><%= event.starts_at %></small>
          </div>
          <p class="mb-1"><%= event.detail%></p>
        </div>
      <% end %>
    </div>
  </div>
  </div>
</section>