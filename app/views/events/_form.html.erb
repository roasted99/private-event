
  <%= form_with(model: event) do |form| %>
    <% if event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
          <% event.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="form-group">
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, autofocus: true, require: true, class: "form-control" %>
    </div>

      <div class="field">
      <%= form.label :location %>
      <%= form.text_field :location, require: true, class: "form-control" %>
    </div>


      <div class="field">
      <%= form.label :starts_at %>
      <%= form.datetime_field :starts_at, require: true, class: "form-control", placeholder: "dd/mm/yyyy hh:mm am/pm" %>
    </div>

    <div class="field">
      <%= form.label :detail %>
      <%= form.text_area :detail, rows:10, require: true, class: "form-control" %>
    </div>

  <br />

    <div class="actions">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
  </div>
